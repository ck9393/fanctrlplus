<?php
$pluginname = "fanctrlplus";
$cfg_path = "/boot/config/plugins/$pluginname";
$cfg_files = glob("$cfg_path/{$pluginname}_*.cfg");

// 获取状态
$status_text = file_exists("/var/run/{$pluginname}.pid") ? "Running" : "Stopped";
$status_color = $status_text === "Running" ? "green-text" : "red-text";

// 构建风扇行
$fan_rows = "";
foreach ($cfg_files as $file) {
  $cfg = parse_ini_file($file);
  if (($cfg['service'] ?? '0') !== '1') continue;
  $label = $cfg['custom'] ?? basename($file);
  $fan_rows .= <<<ROW
<tr>
  <td><span class="w26">$label</span><span class="w18 fanctrlplus-temp" data-label="$label">--</span><span class="w18 fanctrlplus-rpm" data-label="$label">--</span><span class="w18 fanctrlplus-individual-status" data-label="$label">--</span></td>
</tr>
ROW;
}

// 样式输出
echo '<link rel="stylesheet" href="/plugins/fanctrlplus/fonts/style.css">' . PHP_EOL;
echo <<<STYLE
<style>
.fanctrlplus-status {
  font-weight: normal;
  font-size: 13px;
  display: inline-block;
  margin-bottom: 6px;
}
.w18, .w26 {
  display: inline-block;
  vertical-align: top;
}
</style>
STYLE;

// 输出 tile
$mytiles[$pluginname]['column2'] = <<<EOT
<tbody id="fanctrlplus-dashboard" class="sortable" title="FanCtrl Plus">
<tr><td>
  <i class="icon-fanctrlplus f32"></i>
  <div class="section">FanCtrl Plus<br>
    <span class="$status_color fanctrlplus-status">Status: $status_text</span>
  </div>
</td></tr>
<tr><td>
  <span class="w26"><strong>Name</strong></span>
  <span class="w18"><strong>Temp</strong></span>
  <span class="w18"><strong>RPM</strong></span>
  <span class="w18"><strong>Status</strong></span>
</td></tr>
$fan_rows
<tr><td>
  <a href="/Settings/fanctrlplus" title="Go to FanCtrl Plus settings"><i class="fa fa-fw fa-cog control"></i></a>
</td></tr>
</tbody>
EOT;
?>

<script>
function updateFanctrlplusTile() {
  const tile = document.getElementById("fanctrlplus-dashboard");
  if (!tile) return;

  fetch("/plugins/fanctrlplus/FanctrlDashboard.php")
    .then(res => res.json())
    .then(data => {
      // 更新顶部状态
      const statusSpan = tile.querySelector(".fanctrlplus-status");
      if (statusSpan) {
        statusSpan.textContent = "Status: " + data.status;
        statusSpan.className = "fanctrlplus-status " + (data.status === "Running" ? "green-text" : "red-text");
      }

      // 更新每个风扇的 Temp / RPM / 状态
      data.fans.forEach(f => {
        const tempEl = tile.querySelector(`.fanctrlplus-temp[data-label="${f.label}"]`);
        const rpmEl = tile.querySelector(`.fanctrlplus-rpm[data-label="${f.label}"]`);
        const statusEl = tile.querySelector(`.fanctrlplus-individual-status[data-label="${f.label}"]`);
        if (tempEl) tempEl.textContent = f.temp + "°C";
        if (rpmEl) rpmEl.textContent = f.rpm + " RPM";
        if (statusEl) statusEl.textContent = f.rpm > 0 ? "Running" : "Stopped";
      });
    })
    .catch(() => {
      const statusSpan = document.querySelector(".fanctrlplus-status");
      if (statusSpan) statusSpan.textContent = "Status: Loading...";
    });
}

document.addEventListener("DOMContentLoaded", function () {
  setTimeout(updateFanctrlplusTile, 200);
  setInterval(updateFanctrlplusTile, 15000);
});
</script>

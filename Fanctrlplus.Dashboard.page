<script>
$(function() {
  $.get('/plugins/<?=$plugin?>/include/FanctrlLogic.php?op=status_all', function(data) {
    const tbody = $('#fanctrlplus-dashboard-body');
    Object.entries(data).forEach(([name, status]) => {
      const tr = $('<tr>');
      const state = status === 'running' ? '🟢 Running' : '🔴 Stopped';
      tr.append(`<td>${name}</td><td>${state}</td>`);
      tbody.append(tr);
    });
  });
});
</script>


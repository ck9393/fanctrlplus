<?PHP
$plugin = "fanctrlplus";
$cfg_dir = "/boot/config/plugins/$plugin";

// åŒ…å«å…¬ç”¨å‡½æ•°
require_once "$docroot/plugins/$plugin/include/Common.php";
require_once "$docroot/plugins/$plugin/include/FanBlockRender.php";



// åˆå§‹åŒ–é…ç½®ç›®å½•
if (!is_dir($cfg_dir)) {
  mkdir($cfg_dir, 0777, true);
}

// === ç¬¬ä¸€æ­¥ï¼šè¯»å–æ‰€æœ‰ fanctrlplus_*.cfg æ–‡ä»¶ ===
$cfg_files = glob("$cfg_dir/{$plugin}_*.cfg");

// === ç¬¬äºŒæ­¥ï¼šä» order.cfg è¯»å–å·¦å³æ é¡ºåº ===
$order_left = [];
$order_right = [];

$order_file = "$cfg_dir/order.cfg";
if (is_file($order_file)) {
  $ini = parse_ini_file($order_file);
  foreach ($ini as $k => $v) {
    if (strpos($k, 'left') === 0)  $order_left[] = $v;
    if (strpos($k, 'right') === 0) $order_right[] = $v;
  }
}

// === ç¬¬ä¸‰æ­¥ï¼šå·²å‡ºç°åœ¨ order.cfg çš„ cfg åˆ—è¡¨ï¼Œé¿å…é‡å¤åŠ è½½ ===
$seen = array_flip(array_merge($order_left, $order_right));

// === ç¬¬å››æ­¥ï¼šå‡†å¤‡ fan block æ¸²æŸ“æ•°ç»„ï¼ˆå«å·¦å³æ  + å…¶ä»–ï¼‰===
$fan_column_left  = [];
$fan_column_right = [];
$all_cfg = [];  // â† ä»ä¿ç•™æ‰€æœ‰ cfg ç»™ JS å±‚ç”¨

// å·¦æ æ¸²æŸ“
foreach ($order_left as $file) {
  $path = "$cfg_dir/$file";
  if (is_file($path)) {
    $cfg = parse_ini_file($path);
    $cfg['file'] = $file;
    $fan_column_left[] = $cfg;
    $all_cfg[] = $cfg;
  }
}

// å³æ æ¸²æŸ“
foreach ($order_right as $file) {
  $path = "$cfg_dir/$file";
  if (is_file($path)) {
    $cfg = parse_ini_file($path);
    $cfg['file'] = $file;
    $fan_column_right[] = $cfg;
    $all_cfg[] = $cfg;
  }
}

// === ç¬¬äº”æ­¥ï¼šåŠ è½½æœªåœ¨ order.cfg å‡ºç°çš„æ­£å¼ cfgï¼ˆé»˜è®¤å¡å…¥å³æ ï¼‰===
foreach ($cfg_files as $path) {
  $basename = basename($path);
  if (!isset($seen[$basename]) && strpos($basename, '_temp_') === false) {
    $cfg = parse_ini_file($path);
    $cfg['file'] = $basename;
    $fan_column_right[] = $cfg;
    $all_cfg[] = $cfg;
  }
}

// === ç¬¬å…­æ­¥ï¼šåŠ è½½æ‰€æœ‰ temp_x.cfgï¼Œé»˜è®¤åŠ å…¥å³æ  ===
foreach ($cfg_files as $path) {
  $basename = basename($path);
  if (strpos($basename, '_temp_') !== false) {
    $cfg = parse_ini_file($path);
    $cfg['file'] = $basename;
    $fan_column_right[] = $cfg;
    $all_cfg[] = $cfg;
  }
}
$pwms = list_pwm();
$disks = list_valid_disks_by_id();
$width = 300;
